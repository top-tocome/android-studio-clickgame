<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="damage_temp">
        <item name="android:text">@string/none</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignTop">@+id/monster</item>
        <item name="android:layout_alignEnd">@+id/monster</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:alpha">0</item>
    </style>

    <style name="music_snare">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_above">@+id/monster</item>
        <item name="android:layout_toStartOf">@+id/monster</item>
        <item name="android:contentDescription">@string/none</item>
        <item name="android:src">@drawable/note</item>
        <item name="contentDescription">@string/none</item>
    </style>

    <style name="music_hat">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_above">@+id/monster</item>
        <item name="android:layout_toEndOf">@+id/monster</item>
        <item name="android:contentDescription">@string/none</item>
        <item name="android:src">@drawable/note</item>
        <item name="contentDescription">@string/none</item>
    </style>

    <style name="music_kick">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_below">@+id/monster</item>
        <item name="android:layout_toStartOf">@+id/monster</item>
        <item name="android:contentDescription">@string/none</item>
        <item name="android:src">@drawable/note</item>
        <item name="contentDescription">@string/none</item>
    </style>

    <style name="music_clap">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_below">@+id/monster</item>
        <item name="android:layout_toEndOf">@+id/monster</item>
        <item name="android:contentDescription">@string/none</item>
        <item name="android:src">@drawable/note</item>
        <item name="contentDescription">@string/none</item>
    </style>

    <style name="snare_down">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_below">@+id/monster</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_toEndOf">@+id/kick1</item>
        <item name="contentDescription">@string/none</item>
    </style>

    <style name="hat_down">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_below">@+id/monster</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_toEndOf">@+id/snare1</item>
        <item name="contentDescription">@string/none</item>
    </style>
</resources>